@model ClassRoomEditViewModel

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">ClassRoom List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit ClassRoom</li>
                </ol>
            </nav><br /><br />
            <form method="post" enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="form-group col-md-10">
                        <input asp-for="Id" class="form-control" readonly style="background-color: #293043" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="NameClassRoom"></label>
                    </div>
                    <div class="form-group col-md-10">
                        <input asp-for="NameClassRoom" class="form-control" />
                        <span asp-validation-for="NameClassRoom" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="DescribeClassRoom"></label>
                    </div>
                    <div class="form-group col-md-10">
                        <textarea asp-for="DescribeClassRoom" class="form-control"></textarea>
                        <span asp-validation-for="DescribeClassRoom" class="text-danger"></span>
                    </div>
                </div>
                <br /><br />

                <div class="form-group">

                    <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Update</button>
                    <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                    <br />
                    <br />
                    <br />

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}